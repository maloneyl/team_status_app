- content_for :javascripts do
  = javascript_include_tag '//www.google.com/jsapi', 'chartkick'

- if user_signed_in?
  - if current_user == @user
    .users-groups-section
      = render 'groups'
    .users-mentions-section
      = render 'mentions'
    .users-agendas-section
      = render 'agendas'
    .users-reports-section
      = render 'reports'
  - else
    This is not the dashboard you're looking for...
- else
  Please sign up or sign in.
