.container
  .row.clear
  .row
    .small-9.small-centered.medium-centered.large-centered.columns
      %h2 Edit #{resource_name.to_s.humanize}

      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :id => 'edit-user-form' }) do |f|
        = devise_error_messages!

        %fieldset
          %legend User Details
          %div
            = f.label :first_name
            = f.text_field :first_name, :autofocus => true
          %div
            = f.label :last_name
            = f.text_field :last_name
          %div
            = f.label :username
            = f.text_field :username
          %div
            = f.label :email
            = f.email_field :email, :autofocus => true
          / - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          /   %div
          /     Currently waiting confirmation for: #{resource.unconfirmed_email}
          %div
            = f.label :password, 'New password (leave blank if not changing)'
            = f.password_field :password, :autocomplete => "off"
          %div
            = f.label :password_confirmation, 'New password confirmation (leave blank if not changing)'
            = f.password_field :password_confirmation
          %div
            = f.label :current_password, 'Current password (required to confirm changes)'
            = f.password_field :current_password
          %div= f.submit "Update", :class => 'button round'

      .devise-links
        Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}
        %br/
        = link_to "Back", :back
  .row.clear
