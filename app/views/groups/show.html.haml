%h2= @group.name.titleize

%h3 Members:
- @group.users.each do |member|
  = member.full_name
  = "(Admin)" if @group.owner_id == member.id
  = "|" unless member == @group.users.last

%p ***

%h3 What is everyone up to?

- if @group.users.where(:id => current_user.id).present?
  = form_for([@group, @group.statuses.build], html: {id: 'status-form'}) do |f|
    %fieldset
      %legend Add a Status
      .field
        = f.text_area :body, :size => '80x3'
        %br/
      .field
        = f.label :tracking, 'Start timer?'
        = f.check_box :tracking
        %br/
      .actions
        = f.submit
%p

- @group.statuses(:created_at).reverse_order.each do |message|
  %div.group-status-list-item
    = User.find(message.user_id).full_name
    \|
    %i= time_ago_in_words(message.created_at) + ' ago'
    %div.group-status-list-item-body
      - if message.at_user == current_user.username
        %b= message.body
      - else
        = message.body
      %div.group-status-list-item-tracking
        - if message.user_id == current_user.id && message.tracking
          = link_to "Done? Stop timer", switch_tracking_group_status_path(@group, message), :method => :put
    = "---" unless message == @group.statuses.first

- if @group.owner_id == current_user.id
  %p ***
  %p Hello, admin! Update group / Add a member

